<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_club_kanban" model="ir.ui.view">
        <field name="name">clbcl.club.kanban</field>
        <field name="model">clbcl.club</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="id"/>
                <field name="club_name"/>
                <field name="area"/>
                <field name="address"/>
                <field name="note"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        Name:
                                        <field name="club_name"/>
                                    </li>
                                    <li>
                                        address:
                                        <field name="address"/>
                                    </li>
                                    <li>
                                        area:
                                        <field name="area"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_club_tree" model="ir.ui.view">
        <field name="name">clbcl.club.tree</field>
        <field name="model">clbcl.club</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="club_name"/>
                <field name="area"/>
                <field name="address"/>
                <field name="phone"/>
                <field name="note"/>
                <field name="image" widget="image"/>
            </tree>
        </field>
    </record>

    <record id="view_club_form" model="ir.ui.view">
        <field name="name">clbcl.club.form</field>
        <field name="model">clbcl.club</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="club_name"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="area"/>
                            <field name="phone"/>
                            <field name="note"/>
                            <field name="active" invisible="1"/>
                            <field name="image" widget="image"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_club_search" model="ir.ui.view">
        <field name="name">clbcl.club.search</field>
        <field name="model">clbcl.club</field>
        <field name="arch" type="xml">
            <search string="clubs">
                <field name="club_name"/>
                <field name="phone"/>
                <field name="note"/>
                <separator/>
                <filter string="Hà nội" name="hanoi" domain="[('area', '=', 'hanoi')]"/>
                <filter string="Hồ chí minh" name="hochiminh" domain="[('area', '=', 'hochiminh')]"/>
                <filter string="Khác" name="other" domain="[('area', '=', 'other')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="1" string="Group By">
                    <filter string="area" name="area" context="{'group_by':'area'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_clbcl_club" model="ir.actions.act_window">
        <field name="name">clubs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clbcl.club</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first club!
            </p>
        </field>
    </record>


    <menuitem id="menu_clbcl_root"
              name="CLBCL"
              sequence="10"/>

    <menuitem id="menu_club_root"
              name="Clubs"
              parent="menu_clbcl_root"
              sequence="10"/>

    <menuitem id="menu_club"
              name="Clubs"
              parent="menu_club_root"
              action="action_clbcl_club"
              sequence="10"/>


</odoo>